        android:textColor="#000000"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="392dp"
        app:srcCompat="@drawable/image3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_baseline_star_border_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="465dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="FENERBAHCE"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:padding="8dp"
        android:text="Alexsandro de Souza, commonly known as Alex (born 14 September 1977), is a Brazilian football pundit and retired footballer, who played as an attacking midfielder. He is a former captain of the Brazil national team and Turkish club FenerbahÃ§e; throughout his career, he also played for Coritiba, Palmeiras, Flamengo and Cruzeiro in Brazil, and Parma in the Italian Serie A. "
