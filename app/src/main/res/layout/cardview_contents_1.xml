<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/card_padding"
    android:scrollbarThumbHorizontal="?attr/colorControlHighlight">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Mario Gómez"
        android:textColor="#000000"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="392dp"
        app:srcCompat="@drawable/Dj8NGmwXsAIv5ie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_baseline_star_border_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="465dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="BESIKTAS JK"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:padding="8dp"
        android:text="Mario Gómez García (born 10 July 1985) is a German former professional footballer who played as a striker. Gómez began his professional career with Stuttgart.He left for Serie A team Fiorentina in 2013 and was affected by injury during his time in Italy. Gómez was loaned to Turkey's Beşiktaş in 2015 and was top scorer as the club won the Süper Lig."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>